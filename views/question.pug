extends layout.pug

block content
  d.page_content
    h1 #{question.title}
    div#question
        h3 #{question.content}
        div
            div.question-info
                a asked by: #{question.User.displayName}
                br
                a asked on: #{(question.updatedAt).toString().split(' ').slice(0,5).join(' ')}

            div
                if locals.authenticated
                    form(action=`/questions/${question.id}/answers`, method=post)
                        button(id=`question-${question.id}`) Answer
                        
                if locals.user.id === question.userId
                    form(action=`/questions/${question.id}/delete` method='post')
                        button.delete-button Delete
        
  

